<div class="container">
<h2>Edit Post</h2>
</div>
{{#each posts as |post|}}
<div class="container">
    <form class="row g-3" id="edit-post-form">
        <div class="mb-3">
            <input type="text" class="form-control invisible" id="inputPostId" value={{post.id}}>
            <label for="inputPostTitle" class="form-label">Title:</label>
            <input type="text" class="form-control" id="inputPostTitle" value="{{post.title}}">
        </div>
        <div class="mb-3">
            <label for="inputPostText" class="form-label">Content:</label>
            <!--input type="text" class="form-control" id="inputPostText" value="{{post.description}}" rows="3"-->
            <textarea class="form-control" id="inputPostText" rows="3">{{post.description}}</textarea>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">POST</button>
        </div>
    </form>
</div>
{{/each}}
<script src="../../js/editpost.js"></script>